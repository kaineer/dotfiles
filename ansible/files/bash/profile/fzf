#!/usr/bin/env bash
#  _____  ___
# /__   \/ __\  Tangerine Cat, kaineer@gmail.com
#   / /\/ /
#  / / / /___   github: https://github.com/kaineer
#  \/  \____/   twitter: https://twitter.com/kaineer
#
# * FZF theme sandbox: https://vitormv.github.io/fzf-themes/
# * Nord theme: https://www.nordtheme.com/
#

### NOTE: this line means we should not load fzf
###   for non-interactive shell
[[ "$1" != "-i" ]] && return

eval "$(fzf --bash)"

export FZF_DEFAULT_OPTS="-x --bind=ctrl-j:accept,tab:toggle-down --info=inline-right --ellipsis=…"

# Brave Leo generated answer:
# @link: https://search.brave.com/search?q=fzf+history+without+numbers&source=web&summary=1&conversation=cff978e1012acaccd52ee5&summary_og=5b67409c3ff676e826bb83
#
export FZF_CTRL_R_OPTS="--with-nth 2.."

# My nordtheme colors
#
# Theme sandbox:
# @link: https://vitormv.github.io/fzf-themes/
export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS'
  --color=fg:-1,fg+:#d0d0d0,bg:#2e3440,bg+:#262626
  --color=hl:#ebcb8b,hl+:#5fd7ff,info:#88c0d0,marker:#ebcb8b
  --color=prompt:#a3be8b,spinner:#b48dac,pointer:#88c0d0,header:#a3be8b
  --color=gutter:#2e3440,border:#262626,separator:#3b4252,label:#aeaeae
  --color=query:#d9d9d9
  --border="rounded" --border-label="" --preview-window="border-rounded" --prompt="> "
  --marker="+ " --pointer="»" --separator="-" --scrollbar="|"'

source $HOME/.config/fzf/fzf.completion
bind -x '"\t": fzf_bash_completion'
