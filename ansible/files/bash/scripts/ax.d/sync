#!/usr/bin/env bash

commit_message() {
  echo "Sync from $HOSTNAME at $(date +'%y.%m.%d -- %H:%M')"
}

cd $DF_DIR
DF_NOTHING_TO_COMMIT=$(nothing_to_commit)
if [[ "$DF_NOTHING_TO_COMMIT" == "0" ]]; then
  git add .
  git commit -m "$(commit_message)"
fi
git pull origin master
git push origin master

